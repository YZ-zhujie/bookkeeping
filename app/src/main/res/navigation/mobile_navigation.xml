<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.zzj.myapplication.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_accounting"
        android:name="com.zzj.myapplication.RecordListFragment"
        android:label="@string/title_accounting"
        tools:layout="@layout/fragment_record_list" />

    <fragment
        android:id="@+id/navigation_items"
        android:name="com.zzj.myapplication.ItemListFragment"
        android:label="@string/title_items"
        tools:layout="@layout/fragment_item_list" />
</navigation>
